<div style="width: 100%; height: 700px;"
        data-controller="mapbox-directions"
        data-mapbox-directions-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>"
        data-mapbox-directions-destination-value="<%= [@loo.longitude, @loo.latitude] %>">
</div>

 <div class="d-flex justify-content-center" style="width: 100%;">
  <div class="main-button">
    <%= link_to loo_path(@loo), class:"text-decoration-none" do %>
    <div class="btn btn-3 btn-outline-primary btn-sm border-3">
      <i class="fas fa-times back d-flex align-items-center"></i>
    </div>
    <% end %>
    <%= link_to "I have arrived & am ready to poop!", new_loo_review_path(@loo), class:"btn btn-primary text-warning" %>
    </div>
</div>
